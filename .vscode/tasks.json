{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "label": "build debug",
      "command": "make",
      "args": [
        "BUILD_MODE=DEBUG",
        "PROJECT_NAME=${fileBasenameNoExtension}"
      ],
      "windows": {
        "command": "mingw32-make.exe",
        "args": [
          "BUILD_MODE=DEBUG",
          "PROJECT_NAME=${fileBasenameNoExtension}"
        ]
      },
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "type": "process",
      "label": "build clean",
      "command": "make",
      "args": [
        "clean",
        "PROJECT_NAME=${fileBasenameNoExtension}"
      ],
      "windows": {
        "command": "mingw32-make.exe",
        "args": [
          "clean",
          "PROJECT_NAME=${fileBasenameNoExtension}"
        ]
      },
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}